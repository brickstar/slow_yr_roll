<div class="welcome-box-1">
  <div class="translate-button-box-new">
    <%= render partial: 'shared/translate_button' %>
  </div>
  <div class="welcome-box-2">
    <section class="left-side">
      <div class="col-md-3 col-sm-6">
        <div class="box15">
          <%= image_tag  "dog_jump.gif", id: 'welcome-image' %>
          <div class="box-content">
            <% if current_user %>
              <h3 id="title-1" class="title"><%= link_to t(".my songs"), song_path(@song), class: 'login-animation' %></h3>
            <% else %>
              <h3 id="title" class="title"><%= link_to t(".signin"), "/auth/google", class: 'login-animation' %></h3>
            <ul class="icon">
            </ul>
            <% end %>
          </div>
        </div>
      </div>
    </section>
    <section "right-side">
      <div class="storybots-image-box">
        <%= image_tag "storybots_blue.jpg", class: "storybots-image"%>
        <%= image_tag "storybots_pink.jpg", class: "storybots-image"%>
        <%= image_tag "storybots_orange.jpg", class: "storybots-image"%>
        <%= image_tag "storybots_red.jpg", class: "storybots-image"%>
        <%= image_tag "storybots_green.jpg", class: "storybots-image"%>
        <%= image_tag "storybots_12345.jpg", class: "storybots-image"%>
      </div>
    </section>
  </div>
</div>
